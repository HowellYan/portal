<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:annotation-config />

    <bean id="systemProperty" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:properties/system.properties</value>
            </list>
        </property>
    </bean>

    <bean id="configProperty" class="cn.com.bestpay.portal.config.ConfigProperty">
        <property name="properties" ref="systemProperty" />
    </bean>

    <mvc:resources mapping="/**" location="/website/" />

    <!-- ModelAndView -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/" />
        <property name="suffix" value=".html" />
    </bean>

    <bean id="handlebarsViewResolver" class="com.github.jknack.handlebars.springmvc.HandlebarsViewResolver">
        <property name="order" value="0" />
        <property name="prefix" value="/website/" />
        <property name="contentType" value="text/html;charset=utf-8" />
        <property name="failOnMissingFile" value="false" />
        <property name="cache" value="false" />
        <property name="suffix" value=".html" />
    </bean>

    <bean id="viewsResolver" class="com.github.jknack.handlebars.springmvc.HandlebarsViewResolver">
        <property name="order" value="1" />
        <property name="prefix" value="/page/" />
        <property name="suffix" value=".js"/>
    </bean>

    <bean id="viewResolver" class="com.github.jknack.handlebars.springmvc.HandlebarsViewResolver">
        <property name="order" value="2" />
        <property name="prefix" value="/page/" />
        <property name="suffix" value=".hbs" />
    </bean>

</beans>